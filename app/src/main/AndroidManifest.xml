        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoviLink"
        tools:targetApi="31">
        <activity
            android:name=".ManageSlotsActivity"
            android:exported="false" />
        <activity
            android:name=".AdminLoginActivity"
            android:exported="false" />
        <activity
            android:name=".AdminFormActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".FormActivity"
            android:exported="false" />
        <activity
            android:name=".SimpleSignupActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <activity
            android:name=".FirebaseTestActivity"
            android:exported="false"
            android:theme="@style/Theme.CoviLink" />

        <activity
            android:name=".AvailableSlotsActivity"
            android:exported="false" />

        <activity
            android:name=".MyAppointmentsActivity"
            android:exported="false" />

        <activity
            android:name=".UserRecordsActivity"
