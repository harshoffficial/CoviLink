        <activity
            android:name=".AppointmentManagementActivity"
            android:exported="false" />

        <activity
            android:name=".CertificateActivity"
            android:exported="false" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>